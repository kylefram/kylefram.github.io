---
import Layout from '../layouts/BlogPost.astro';
import resumeData from '../data/resume.json';

const { basics, work, education, leadership, athletics } = resumeData;
---

<Layout
	title="Resume"
	description={`Resume of ${basics.name}`}
	pubDate={new Date()}
>
	<div class="resume-container">
		
		<section>
			<h2>Experience</h2>
			<div class="timeline">
				{work.map((job) => (
					<div class="timeline-item">
						<div class="timeline-marker"></div>
						<div class="timeline-content">
							<div class="job-header">
								<h3>{job.position}</h3>
								<span class="date">{job.startDate} — {job.endDate}</span>
							</div>
							<h4 class="company">{job.company}</h4>
							<p class="description">{job.description}</p>
						</div>
					</div>
				))}
			</div>
		</section>

		<section>
			<h2>Education</h2>
			<div class="grid-list">
				{education.map((edu) => (
					<div class="card">
						<h3>{edu.institution}</h3>
						<p class="degree">{edu.studyType} in {edu.area}</p>
						<span class="date">{edu.startDate} — {edu.endDate}</span>
					</div>
				))}
			</div>
		</section>
		<section>
			<h2>Leadership</h2>
			<div class="timeline">
				{leadership && leadership.map((item) => (
					<div class="timeline-item">
						<div class="timeline-marker"></div>
						<div class="timeline-content">
							<div class="job-header">
								<h3>{item.role}</h3>
								<span class="date">{item.startDate} — {item.endDate}</span>
							</div>
							<h4 class="company">{item.organization}</h4>
							<p class="description">{item.description}</p>
						</div>
					</div>
				))}
			</div>
		</section>
		<section>
			<h2>Athletics</h2>
			<div class="timeline">
				{athletics && athletics.map((item) => (
					<div class="timeline-item">
						<div class="timeline-marker"></div>
						<div class="timeline-content">
							<div class="job-header">
								<h3>{item.event}</h3>
								<span class="date">{item.Date}</span>
							</div>
							<h4 class="company">{item.team}</h4>
							<p class="description">
                                <strong>Result:</strong> {item.result}
                            </p>
						</div>
					</div>
				))}
			</div>
		</section>

	</div>
</Layout>

<style>
	/* General Layout */
	.resume-container {
		max-width: 800px;
		margin: 0 auto;
		font-family: 'Segoe UI', sans-serif;
	}

	/* Header */
	.resume-header {
		text-align: center;
		margin-bottom: 2rem;
	}
	.headline {
		font-size: 1.2rem;
		color: #666;
		margin: 0.5rem 0;
		font-weight: 500;
	}
	.summary {
		color: #444;
		line-height: 1.6;
		max-width: 600px;
		margin: 0 auto;
	}

	h2 {
		margin-top: 2rem;
		border-bottom: 2px solid #333;
		padding-bottom: 0.5rem;
		font-size: 1.5rem;
	}

	/* Timeline Style for Work */
	.timeline {
		position: relative;
		margin: 20px 0;
		padding-left: 20px;
		border-left: 2px solid #e0e0e0;
	}

	.timeline-item {
		position: relative;
		margin-bottom: 30px;
		padding-left: 20px;
	}

	.timeline-marker {
		position: absolute;
		left: -26px; /* Adjust based on border width */
		top: 5px;
		width: 12px;
		height: 12px;
		background: #333;
		border-radius: 50%;
		border: 2px solid #fff;
	}

	.job-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		flex-wrap: wrap;
	}

	.job-header h3 {
		margin: 0;
		font-size: 1.2rem;
		color: #222;
	}

	.company {
		margin: 4px 0 8px 0;
		font-weight: 600;
		color: #555;
	}

	.date {
		font-size: 0.85rem;
		color: #888;
		font-weight: bold;
		text-transform: uppercase;
	}

	.description {
		margin: 0;
		color: #444;
		line-height: 1.5;
		white-space: pre-line; /* Preserves line breaks from your JSON */
	}

	/* Grid Style for Education */
	.grid-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 20px;
		margin-top: 20px;
	}

	.card {
		background: #f9f9f9;
		padding: 15px;
		border-radius: 8px;
		border: 1px solid #eee;
	}

	.card h3 { margin: 0 0 5px 0; font-size: 1.1rem; }
	.degree { margin: 0 0 10px 0; color: #555; }
</style>