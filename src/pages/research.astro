---
import Layout from '../layouts/BlogPost.astro';
import researchData from '../data/research.json';
---

<Layout
	title="Research"
	description="Academic papers and projects"
	pubDate={new Date()}
>
	<div class="research-container">
		<p class="intro">
			My research interests lie at the intersection of <strong>computational imaging</strong> and <strong>high-performance systems</strong>. Below is a selection of my recent publications and projects.
		</p>

		<div class="paper-list">
			{researchData.map((paper) => (
				<article class="paper-card">
					<header>
						<h3>{paper.title}</h3>
						<div class="meta">
							<span class="venue">{paper.venue}</span>
							<span class="year">{paper.year}</span>
						</div>
						<p class="authors">{paper.authors}</p>
					</header>
					
					<p class="description">{paper.description}</p>
					
					<div class="links">
						<a href={paper.pdf} target="_blank" class="btn btn-primary">
							Download PDF
						</a>

						{paper.demo && (
							<a href={paper.demo} target="_blank" class="btn btn-outline">
								View Demo
							</a>
						)}
					</div>
				</article>
			))}
		</div>
	</div>
</Layout>

<style>
	.research-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.intro {
		margin-bottom: 3rem;
		font-size: 1.1rem;
		line-height: 1.6;
		color: #555;
	}

	.paper-list {
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	.paper-card {
		border-left: 3px solid #eee;
		padding-left: 1.5rem;
		transition: border-color 0.2s;
	}

	.paper-card:hover {
		border-left-color: #2337ff; /* Matches your accent color */
	}

	h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.4rem;
		color: #111;
	}

	.meta {
		font-family: 'Atkinson', sans-serif;
		font-size: 0.9rem;
		color: #666;
		margin-bottom: 0.2rem;
		font-weight: bold;
	}

	.year {
		color: #888;
		font-weight: normal;
		margin-left: 5px;
	}
	
	.year::before {
		content: "â€¢";
		margin-right: 5px;
	}

	.authors {
		font-style: italic;
		color: #555;
		margin-bottom: 1rem;
		font-size: 0.95rem;
	}

	.description {
		margin-bottom: 1.2rem;
		line-height: 1.6;
	}

	/* BUTTON STYLES */
	.links {
		display: flex;
		gap: 1rem;
	}

	.btn {
		display: inline-block;
		padding: 8px 16px;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
		transition: all 0.2s ease;
	}

	/* Filled Button (Primary) */
	.btn-primary {
		background-color: #f0f0f0;
		color: #333;
		border: 1px solid #ddd;
	}
	.btn-primary:hover {
		background-color: #333;
		color: white;
		border-color: #333;
	}

	/* Outline Button (Secondary) */
	.btn-outline {
		background-color: transparent;
		color: #666;
		border: 1px solid #ccc;
	}
	.btn-outline:hover {
		border-color: #333;
		color: #333;
	}

</style>